<Window x:Class="POOmall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:POOmall.UserControls"
        mc:Ignorable="d"
        Title="Simulation"
        WindowStartupLocation="CenterScreen"
        Height="700"
        Width="1000"
        FontSize="18">
  <StackPanel HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Margin="13,0,-13,0">
    <TextBlock TextWrapping="Wrap"
               Text="POO Mall Simulator"
               FontSize="35"
               HorizontalAlignment="Center"
               FontWeight="Bold" />
    <TabControl MinHeight="400">
      <TabItem Header="Main"></TabItem>
      <TabItem Header="Locales">
        <StackPanel Orientation="Horizontal">
          <!-- LocalesView -->
          <views:LocalesView />
          <!-- DetallesView -->
          <views:DetallesView />
        </StackPanel>
      </TabItem>
      <TabItem Header="Reporte General"></TabItem>
      <TabItem Header="Ajustes"></TabItem>
    </TabControl>
  </StackPanel>
</Window>
